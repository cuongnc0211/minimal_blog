<section
  class="overflow-hidden bg-[url(<%= @post.cover_link %>)] bg-cover bg-top bg-no-repeat"
>
  <div class="bg-black/25 p-8 md:p-12 lg:px-16 lg:py-24">
    <div class="text-center ltr:sm:text-left rtl:sm:text-right">
      <h2 class="text-2xl font-bold text-white sm:text-3xl md:text-5xl"><%= @post.title %></h2>

      <p class="hidden max-w-lg text-white/90 md:mt-6 md:block md:text-lg md:leading-relaxed">
        <%= @post.description %>
      </p>
    </div>
  </div>
</section>

<section class='mt-5'>
  <%== @post.content %>
</section>